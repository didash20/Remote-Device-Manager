<form action="/createResource" enctype="multipart/form-data" method="POST" autocomplete="off">

  <div style="width: 70%; margin: auto;">

    <h1>Create a new Resource here</h1>

    <table style="width: 100%;">
      <tr>
        <td>
          <label for="name">Resource Name:</label>
          <input type="text" placeholder="Measurements Live" pattern="([A-Z a-z-.])+" name="name" id="name" required>
        </td>
        <td style="width: 60px;"></td>
        <td>
          <label for="host">Resource IP Address:</label>
          <input type="text" placeholder="255.255.255.255" pattern="[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}"
            name="host" id="host" required>
        </td>
      </tr>
      <tr>
        <td>
          <label for="creator">Resource Creator:</label>
          <input type="text" placeholder="NI" pattern="([A-Z a-z-.])+" name="creator" id="creator">
        </td>
        <td style="width: 60px;"></td>
        <td>
          <label for="port">Resource IP Port:</label>
          <input type="text" value="80" pattern="[0-9]+" name="port" id="port" required>
        </td>
      </tr>
      <tr>
        <td>
          <label for="instrument">Resource Instrument:</label>
          <input type="text" placeholder="ELVIS III" name="instrument" id="instrument">
        </td>
        <td style="width: 60px;"></td>
        <td>
          <label for="source">Resource Source:</label>
          <input type="text" placeholder="/measure.html" name="source" id="source">
        </td>
      </tr>
    </table>
    <label for="description">Resource Description:</label><br>
    <textarea name="description" placeholder="Enter the resource description here..." id="description" rows="10"
      cols="60"></textarea>
      <br><br>
    <label for="image">Resource Image:</label>
    <input type="file" name="image" id="image" />
    <br><br>
    <input type="submit" class="signupbtn" value="Create Resource" />
  </div>
</form>